<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bookmanager.mapper.CartMapper">
    
    <!-- 查询用户购物车列表 -->
    <select id="selectCartListByUserId" resultMap="cartResultMap">
        SELECT c.*, b.id as book_id, b.title, b.author, b.price, b.cover_image, b.stock, b.status
        FROM cart c
        LEFT JOIN book b ON c.book_id = b.id
        WHERE c.user_id = #{userId}
        ORDER BY c.create_time DESC
    </select>
    
    <resultMap id="cartResultMap" type="com.bookmanager.entity.Cart">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="bookId" column="book_id"/>
        <result property="quantity" column="quantity"/>
        <result property="createTime" column="create_time"/>
        <association property="book" javaType="com.bookmanager.entity.Book">
            <id property="id" column="book_id"/>
            <result property="title" column="title"/>
            <result property="author" column="author"/>
            <result property="price" column="price"/>
            <result property="coverImage" column="cover_image"/>
            <result property="stock" column="stock"/>
            <result property="status" column="status"/>
        </association>
    </resultMap>
</mapper>

