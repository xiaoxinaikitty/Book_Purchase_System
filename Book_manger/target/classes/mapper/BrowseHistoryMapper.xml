<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bookmanager.mapper.BrowseHistoryMapper">
    
    <!-- 查询用户浏览记录 -->
    <select id="selectByUserId" resultMap="browseHistoryResultMap">
        SELECT bh.*, b.id as bid, b.title, b.author, b.price, b.cover_image
        FROM browse_history bh
        LEFT JOIN book b ON bh.book_id = b.id
        WHERE bh.user_id = #{userId}
        ORDER BY bh.last_browse_time DESC
        <if test="limit != null">
            LIMIT #{limit}
        </if>
    </select>

    <!-- 分页查询用户浏览记录 -->
    <select id="selectHistoryPage" resultMap="browseHistoryResultMap">
        SELECT bh.*, b.id as bid, b.title, b.author, b.price, b.cover_image
        FROM browse_history bh
        LEFT JOIN book b ON bh.book_id = b.id
        WHERE bh.user_id = #{userId}
        ORDER BY bh.last_browse_time DESC
    </select>
    
    <resultMap id="browseHistoryResultMap" type="com.bookmanager.entity.BrowseHistory">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="bookId" column="book_id"/>
        <result property="browseCount" column="browse_count"/>
        <result property="lastBrowseTime" column="last_browse_time"/>
        <association property="book" javaType="com.bookmanager.entity.Book">
            <id property="id" column="bid"/>
            <result property="title" column="title"/>
            <result property="author" column="author"/>
            <result property="price" column="price"/>
            <result property="coverImage" column="cover_image"/>
        </association>
    </resultMap>
</mapper>

