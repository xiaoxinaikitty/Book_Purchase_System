<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bookmanager.mapper.CategoryMapper">
    
    <!-- 查询所有分类 -->
    <select id="selectAllCategories" resultType="com.bookmanager.entity.Category">
        SELECT * FROM category ORDER BY sort ASC, id ASC
    </select>
    
    <!-- 根据父ID查询子分类 -->
    <select id="selectByParentId" resultType="com.bookmanager.entity.Category">
        SELECT * FROM category WHERE parent_id = #{parentId} ORDER BY sort ASC
    </select>
    
</mapper>

